<Window x:Class="WeatherViewClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherViewClient"
        mc:Ignorable="d"
        Title="Показ погоды" Height="450" Width="800" WindowStyle="ThreeDBorderWindow" ResizeMode="CanMinimize">
    <Grid Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}" Margin="0,0,0,-6">
        <Label Content="Выберите город" HorizontalAlignment="Center" Margin="0,44,0,0" VerticalAlignment="Top" FontSize="17"/>
        <ComboBox x:Name="CBoxChooseCity" HorizontalAlignment="Center" Margin="0,96,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="BtnShowWeather" Content="Показать погоду" HorizontalAlignment="Left" Margin="332,142,0,0" VerticalAlignment="Top" Height="30" Width="128" Click="BtnShowWeather_Click"/>
        <DataGrid x:Name="DataGridActWeather" Margin="269,202,285,119"/>
        <Button x:Name="BtnOpenHistory" Content="История запросов" HorizontalAlignment="Left" Margin="340,344,0,0" VerticalAlignment="Top" Height="30" Width="128"/>

    </Grid>
</Window>
