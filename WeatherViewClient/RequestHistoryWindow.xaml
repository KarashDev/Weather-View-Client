        mc:Ignorable="d"
        Title="RequestHistoryWindow" Height="450" Width="800">
    <Grid Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}">
        <Grid.Style>
            <Style/>
        </Grid.Style>
