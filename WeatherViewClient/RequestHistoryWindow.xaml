        <Label Content="ДО:" HorizontalAlignment="Left" Margin="475,40,0,0" VerticalAlignment="Top" Height="39" Width="190" FontSize="20"/>
        <Label Content="Выберите город:" HorizontalAlignment="Center" Margin="0,117,0,0" VerticalAlignment="Top" Height="46" Width="190" FontSize="20"/>
    </Grid>
</Window>
    
